   end scrape
   

   /* ==  CODE  ==
   --
   Here we put the public handlers the controller uses and exposes as urls.
   --
   */
   
   on index
      put scrape_ConstructFedwikiPageArray (droppedURL, true, true, true) into pageArray
      fedwiki_ReturnPageArray pageArray
   end index

